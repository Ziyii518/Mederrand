<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.auth.signup.WaitForVerificationActivity"
    android:background="@drawable/app_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_120sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/imageWaiting"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/waiting_ic"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/textHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/text_waiting_for_confirmation"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/app_color_dark"
            />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/text_waiting_for_confirmation_message"
            android:fontFamily="@font/montserrat_regular"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="end"
            android:background="@drawable/btn_secondary_other"
            android:paddingHorizontal="@dimen/_40sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:elevation="@dimen/_1sdp"
            android:translationZ="@dimen/_1sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/text_continue"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>