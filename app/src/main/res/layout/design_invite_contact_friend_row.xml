<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_primary"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:translationX="@dimen/_2sdp"
    android:translationZ="2dp"
    android:translationY="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:paddingVertical="@dimen/_12sdp"
    android:paddingHorizontal="@dimen/_10sdp"
    >

    <RelativeLayout
        android:id="@+id/card_profileImage"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/bg_6sdp_app_color_dark"
        >

        <TextView
            android:id="@+id/textFirstTwoLetters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_toStartOf="@id/btnInvite"
        android:layout_toEndOf="@id/card_profileImage"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black_15"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btnInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_secondary_other"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_margin="@dimen/_1sdp"
        android:elevation="@dimen/_1sdp"
        android:translationZ="@dimen/_1sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/invite_text"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            android:layout_marginVertical="@dimen/_5sdp"
            />
    </RelativeLayout>
</RelativeLayout>