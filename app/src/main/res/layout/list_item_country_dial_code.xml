        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp" />


    <TextView
        android:id="@+id/text_countryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
