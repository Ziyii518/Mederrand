<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_color_dark"
    android:layout_marginBottom="@dimen/_20sdp"
    android:paddingHorizontal="@dimen/_10sdp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/place_holder_ic"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        app:riv_border_color="@color/app_color_bg"
        app:riv_border_width="@dimen/_2sdp"
        />
    <TextView
        android:id="@+id/textFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:text="@string/text_default_user_full_name"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="@dimen/_5sdp"
        />
    <TextView
        android:id="@+id/textUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFullName"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="@string/text_default_user_email"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/colorDoveGray"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_medium"
        />
</RelativeLayout>