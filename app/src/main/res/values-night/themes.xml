<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MederrandApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/app_color</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:scrollbarThumbVertical">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowSplashScreenBackground"  tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">0</item>
        <item name="CustomChipChoiceStyle">@style/ChipCustomStyle</item>
    </style>

    <style name="ThemeFullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:navigationBarColor" >@android:color/transparent</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowSplashScreenBackground"  tools:targetApi="s">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">0</item>
        <item name="colorControlActivated">@color/app_color_dark</item>
        <item name="CustomChipChoiceStyle">@style/ChipCustomStyle</item>
    </style>

    <style name="topAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/top_exit_anim</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_out</item>
        <item name="android:windowExitAnimation">@anim/zoom_in</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/bg_6sdp_app_color_dark</item>
        <item name="android:textColorPrimary">@color/black_15</item>
        <item name="android:textColorSecondary">@color/black_15</item>
        <item name="android:colorAccent">@color/black_15</item>
        <item name="android:colorControlActivated">@color/black_15</item>
        <item name="android:textColor">@color/black_15</item>
    </style>

    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">8sp</item>
        <item name="chipCornerRadius">3dp</item>
        <item name="chipStartPadding">@dimen/_6sdp</item>
        <item name="chipEndPadding">@dimen/_6sdp</item>
        <item name="chipMinHeight">@dimen/_25sdp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="DrawerTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/app_color_dark</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
</resources>